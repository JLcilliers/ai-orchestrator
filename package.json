{
  "name": "ai-orchestrator",
  "version": "1.0.0",
  "description": "n8n-based ChatGPT + Claude orchestration system",
  "scripts": {
    "n8n": "n8n start",
    "n8n:dev": "cross-env N8N_SECURE_COOKIE=false n8n start",
    "backend": "node backend/server.js",
    "backend:dev": "nodemon backend/server.js",
    "ui": "cd ui && npm run dev",
    "ui:build": "cd ui && npm run build",
    "dev": "concurrently \"npm run n8n:dev\" \"npm run backend:dev\"",
    "setup": "npm install && cd ui && npm install",
    "test": "jest",
    "test:integration": "node scripts/integration-test.js",
    "smoke-test": "node scripts/ui-smoke-test.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "node-fetch": "^3.3.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7"
  }
}
