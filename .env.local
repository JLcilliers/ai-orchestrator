# ===========================================
# AI Orchestrator - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ----- OpenAI Configuration -----
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ----- Anthropic Configuration -----
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ----- n8n Configuration -----
# n8n will run on this port
N8N_PORT=5678
N8N_HOST=localhost

# Basic auth for n8n (optional but recommended)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# Encryption key for n8n credentials (generate a random 32-char string)
N8N_ENCRYPTION_KEY=your_32_character_encryption_key

# Webhook URL for n8n
WEBHOOK_URL=http://localhost:5678

# ----- Backend Configuration -----
BACKEND_PORT=3001
BACKEND_HOST=localhost

# ----- UI Configuration -----
UI_PORT=3000

# ----- Safety Configuration -----
# Set to 'production' to require approval for deployments
NODE_ENV=development

# Maximum retry attempts for fix loops
MAX_FIX_RETRIES=3

# Restrict to dev-only operations (no production deployments)
DEV_ONLY_MODE=true
