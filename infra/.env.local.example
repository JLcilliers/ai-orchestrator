# ============================================
# AI Orchestrator - Local Development Environment
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ----- PostgreSQL Database -----
POSTGRES_USER=orchestrator
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_DB=orchestrator
POSTGRES_PORT=5432

# ----- n8n Configuration -----
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# IMPORTANT: Generate a random 32+ character encryption key
# You can use: openssl rand -hex 16
# Or: node -e "console.log(require('crypto').randomBytes(24).toString('hex'))"
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Basic Auth for n8n (recommended for security)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_admin_password_here

# ----- Backend API Configuration -----
BACKEND_PORT=3001
BACKEND_HOST=localhost
NODE_ENV=development

# ----- AI API Keys -----
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# ----- Safety Configuration -----
# Set to 'true' to prevent production deployments
DEV_ONLY_MODE=true

# Maximum retry attempts for fix loops
MAX_FIX_RETRIES=3

# ----- Timezone -----
TIMEZONE=UTC
